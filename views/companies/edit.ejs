<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/app.css">
    <title>Document</title>
</head>
<body>
    <nav class="nav">
        <a href="/companies">Companies</a>
        <a href="/companies/new">New Company</a>
        <a href="/drivers">Drivers</a>
        <a href="/drivers/new">New Driver</a>
        <a href="/cars">Cars</a>
        <a href="/cars/new">New Car</a>
    </nav>
    <h1>Edit Company Page</h1>
    <form action="/companies/<%=company._id%>?_method=PUT" method="POST">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%=company.name%>">
        <br>
        <label for="logo">Logo</label>
        <input type="text" name="logo" id="logo" value="<%=company.logo%>">
        <br>
        <label for="address">Address</label>
        <input type="text" name="address" id="address" value="<%=company.address%>">
        <br>
        <label for="city">City</label>
        <input type="text" name="city" id="city" value="<%=company.city%>">
        <br>
        <label for="telephone">Telephone</label>
        <input type="text" name="telephone" id="telephone" value="<%=company.telephone%>">
        <br>
        <label for="drivers">Drivers</label>
        <br>
        <% drivers.forEach((driver) => { %>
            <input type="checkbox" name="arrayOfDrivers" value="<%= driver._id %>">
            <%= driver.name%>
            <br>
        <% }) %>
        <br>
        <input type="submit" value="Update Company">
    </form>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/app.css">
    <title>index</title>
</head>
<body>
    <nav class="nav">
        <a href="/companies">Companies</a>
        <a href="/companies/new">New Company</a>
        <a href="/drivers">Drivers</a>
        <a href="/drivers/new">New Driver</a>
        <a href="/cars">Cars</a>
        <a href="/cars/new">New Car</a>
    </nav>
    <h1>Index of companies</h1>
    <a href="/companies/new">Create a New Company</a>
    <ul>
        <% companies.forEach((company) => { %>
            <li>
                <a href="/companies/<%=company._id%>"> <%= company.name%> </a>
                <form action="/companies/<%=company._id%>?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE">
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>